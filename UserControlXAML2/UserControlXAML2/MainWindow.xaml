<Window x:Class="UserControlXAML2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:UserControlXAML2"
        Title="MainWindow"
        Height="350"
        Width="604">
    <StackPanel>
        <control:CustomControl1 x:Name="customControl"
                                 Content="CLICK ME"
                                 Width="200"
                                 Margin="10"
                                 Click="customControl_Click"/>
        <control:CustomControl1 x:Name="customControl2"
                         Content="CLEAR"
                         Width="200"
                         Margin="10"
                         Click="customControl_Click"/>
        <TextBlock Name="txtBlock"
                   Width="350"
                   Height="50"/>
    </StackPanel>
</Window>